<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_card_view_shape"
        android:layout_margin="8dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:padding="8dp"
                android:background="@drawable/background_card_view_image"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_company_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDiscountTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDiscountWebLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:autoLink="web"
                    android:backgroundTint="@color/fui_transparent"/>

                <TextView
                    android:id="@+id/tvDiscountInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/fui_transparent"/>

                <TextView
                    android:id="@+id/tvDiscountPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/fui_transparent"/>

                <TextView
                    android:id="@+id/tvExpiringDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/fui_transparent"/>

            </LinearLayout>

        </LinearLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="112dp"
                android:layout_height="102dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/background_card_view_swipebutton">

            </FrameLayout>

            <com.example.timil.climateapplication.ui.SwipeButton
                android:id="@+id/btnUseDiscountSwipe"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/fui_transparent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp"
                android:layout_height="72dp" />

        </android.support.constraint.ConstraintLayout>




    </LinearLayout>



    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.8"
        android:id="@+id/tvMyPoints"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:padding="10dp"
        android:elevation="8dp"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_button"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <!--Button
        android:id="@+id/btnUseDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE DISCOUNT"/-->



</android.support.constraint.ConstraintLayout>
